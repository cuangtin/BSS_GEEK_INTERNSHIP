<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/source/footer.css"/>
        <css src="css/source/product_page.css"/>
    </head>
    <body>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info" destination="product.info.price"/>
        <move element="product.info.price" destination="product.info.main" before="product.price.tier"/>
        <move element="product.info.extrahint" destination="product.info.main" after="-"/>
        <referenceBlock name="product.info.stock.sku" remove="true"/>
        <referenceBlock name="home_bss" remove="true"/>
        <referenceBlock name="product.info.review" remove="true"/>
        <referenceContainer name="content.aside" remove="true"/>
        <referenceContainer name="content">

        </referenceContainer>

        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="custom.tab" template="product/view/custom_tab.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Specification</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="catalog.product.related" remove="true"/>
        <referenceBlock name="product.info.upsell" remove="true"/>
        <!-- <move element="custom.tab" destination="product.info.details" after="-"/> -->
        <move element="product.info.details" destination="product.info.main" after="product.options.wrapper.bottom"/>
    </body>
</page>
